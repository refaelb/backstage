{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "matchPackagePatterns": ["*"],
      "groupName": "lerna",
      "schedule": ["before 4am on monday"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]

}
